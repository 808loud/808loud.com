- var title='Project Title'
- var subtitle=''
- var img_src=''
- var img_alt=''
- var a_href=''
- var cta='Visit site'

block meta


.card.animated-hover-parent
  //- .card-block
    h4.card-title #{title}
    if subtitle
      h6.card-subtitle #{subtitle}
  img.img-fluid.p-a-1.zoom(src='#{img_src}' alt='#{title}')
  .card-block
    p.card-text
      block desc
    a.btn.btn-primary(href='#{a_href}' target='_blank') #{cta}
